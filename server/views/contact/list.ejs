<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

  <header> 
    <!--Partial for main navigation-->
    <%- include('../partials/header'); %>
  </header>

  <div id="result" class="jumbotron">
    <div class ="row">
        <div class="col-md-offset-3 col md-8">
            <h1><%= title %></h1>
            <a href="/contactList/add" class ="btn btn-primary" role="button"><i class="fas fa-plus-circle"></i>Add Contact</a>
            <br>
            <br>
            <table class="table.table-bordered table-striped table-hover">
                <!--Header Row-->
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-3">Number</th>
                    <th class="text-center col-6">Email</th>
                    <th class="text-center col-6"> </th>
                    <th class="text-center col-6"> </th>
                </tr>
                <% for(let count = 0; count<ContactList.length; count ++){%>
                <tr class="d-flex">
                    <td class="text-center col-2"><%=ContactList[count].contactname%></td>
                    <td class="text-center col-3"><%=ContactList[count].contactnumber%></td>
                    <td class="text-center col-6"><%=ContactList[count].email%></td>
                    <td class="text-right col-4"><a href="/contactList/edit/<%=ContactList[count]._id%>" class="btn btn-primary"><i class="fas fa-pencil-alt"> Edit</a></td>
                    <td class="text-right col-3"><a href="/contactList/delete/<%=ContactList[count]._id%>" class="btn btn-danger"><i class="fas fa-trash-alt"> Delete</a></td>

                    </tr>
                <%}%>
            </table>
        </div>
    </div>
    
      <!--Script section-->
      <script src="/jquery/dist/jquery.min.js"></script>
      <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
      <script src="/Scripts/appscripts.js"></script>
  </div>

  <footer>
    <%- include('../partials/footer'); %>
  </footer>
  
</body>
</html>
